<Window x:Class="Indicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indicator"
        xmlns:winForms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="IndicatorSample" Height="450" Width="450">
    <Grid>
        <WindowsFormsHost x:Name="Indicator" Loaded="Indicator_Loaded"
                          Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
            <winForms:PictureBox></winForms:PictureBox>
        </WindowsFormsHost>
        
    </Grid>
</Window>
